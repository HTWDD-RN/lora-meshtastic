---
import { Image as AstroImage, type LocalImageProps, type RemoteImageProps } from 'astro:assets'

type Props = (LocalImageProps | RemoteImageProps) & {
  imageClass?: string
}

const props = Astro.props
---

<figure class:list={['!mt-0', props.class]}>
  <!-- @ts-expect-error egal -->
  <AstroImage
    {...props}
    {...{ class: '' }}
    class:list={['max-h-[50vh] object-contain object-left', props.imageClass]}
  />
  <figcaption class="!mt-3">{props.alt}</figcaption>
</figure>
